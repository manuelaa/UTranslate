<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="70dp"
         android:layout_margin="5dp"
         android:background="@color/post_1"
         android:orientation="horizontal" >

         <TextView
             android:id="@+id/item_tvText"
             android:layout_width="184dp"
             android:layout_height="36dp"
             android:layout_gravity="center"
             android:padding="5dp"
             android:singleLine="true"
             android:text="TextView" />

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="vertical"
             android:background="@color/post_2" >

             <LinearLayout
                 android:layout_width="wrap_content"
                 android:layout_height="32dp"
                 android:layout_gravity="center_horizontal"
                 android:weightSum="100" 
                 android:padding="3dp"
                 >

                 <ImageView
                     android:id="@+id/item_ivLangA"
                     android:layout_width="40dp"
                     android:layout_height="30dp"
                     android:layout_gravity="center"
                     android:src="@drawable/lang_10" />

                 <ImageView
                     android:id="@+id/item_ivTrokut"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_gravity="center"
                     android:src="@drawable/trokut_small" 
                     android:padding="3dp"/>

                 <ImageView
                     android:id="@+id/item_ivLangB"
                     android:layout_width="40dp"
                     android:layout_height="30dp"
                     android:layout_gravity="center"
                     android:src="@drawable/lang_3" />

             </LinearLayout>

             <LinearLayout
                 android:layout_width="wrap_content"
                 android:layout_height="match_parent"
                 android:layout_gravity="center_horizontal" >

             <ImageView
                 android:id="@+id/item_ivMic"
                 android:layout_width="wrap_content"
                 android:layout_height="35dp"
                 android:layout_gravity="center"
                 android:src="@drawable/microphone_2" />

             <ImageView
                 android:id="@+id/item_ivCam"
                 android:layout_width="wrap_content"
                 android:layout_height="25dp"
                 android:layout_gravity="center"
                 android:src="@drawable/cam_2" />

         </LinearLayout>
             
         </LinearLayout>

         

     </LinearLayout>
    
</LinearLayout>
